# ===========================================
# AI Sales Brain - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# -------------------------------------------
# Database Configuration (PostgreSQL + pgvector)
# -------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=salesbrain
POSTGRES_USER=salesbrain
POSTGRES_PASSWORD=your_secure_password_here

# Full JDBC URL (alternative to individual settings)
# DATABASE_URL=postgresql://salesbrain:password@localhost:5432/salesbrain

# -------------------------------------------
# OpenAI API Configuration
# -------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: OpenAI Organization ID
# OPENAI_ORG_ID=org-xxxxx

# -------------------------------------------
# JWT Authentication
# -------------------------------------------
# Minimum 256 bits (32 characters) for HS256
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# Token expiry in hours
JWT_EXPIRY_HOURS=24

# Refresh token expiry in days
JWT_REFRESH_EXPIRY_DAYS=7

# -------------------------------------------
# Application Settings
# -------------------------------------------
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# File upload limits
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB

# -------------------------------------------
# Redis Cache (Optional)
# -------------------------------------------
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# -------------------------------------------
# Railway Deployment (Production)
# -------------------------------------------
# These are typically set automatically by Railway
# RAILWAY_ENVIRONMENT=production
# PORT=8080
